<% include ../partials/header %>

<div class="container" style="display: flex; justify-content: center; padding: 20px">
    <div class="row thumbnail" style="display: inline-block; padding: 40px 20px 40px 20px; border-radius: 20px">
        <h1 style="text-align: center">Add new comment on <%= campground.name %></h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Text">
                </div>                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>    
                </div>
            </form>
            <a href="/campgrounds/<%=campground._id%>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>